@model TP_Cine.Sedes

@{
    ViewBag.Title = "AgregarSede";
    Html.RenderPartial("_AdministracionPartial");
}

<h1 class="text-center">Administración: Sede</h1>

@using (Html.BeginForm("AgregarSede", "Administracion", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="conytainer-fluid">
        <div class="row-fluid">
            <div class="col-md-offset-3 col-md-6">
                <h3>Agregar Sede</h3>
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>                        
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Direccion, "Dirección", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PrecioGeneral, "Entrada", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="input-group">
                                <div class="input-group-addon">$</div>
                                @Html.TextBoxFor(model => model.PrecioGeneral, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PrecioGeneral, "", new { @class = "text-danger" })
                            </div>                            
                        </div>                        
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Agregar" class="btn btn-default btn-lg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
}