@{
    ViewBag.Title = "Administracion_Reportes";
}

@{Html.RenderPartial("_AdministracionPartial");}

@using TP_Cine.Models.ModeloNegocio
@model List<ReservasNegocio>

<div class="row">
    <div class="col-sm-9">
            <form class="form-inline" action="FiltrarReportes" method="post">
                <div class="form-group">
                    <label for="fechaInicio">Fecha Inicio:</label>
                    <input type="text" class="form-control" name="fechaInicio">
                </div>

                <div class="form-group">
                    <label for="fechaFin">Fecha Fin:</label>
                    <input type="text" class="form-control" name="fechaFin">
                </div>

                <button type="submit" class="btn btn-default">Filtrar</button>
            </form>

        </div>
</div>


<div class="row">
    <div class="col-sm-10">

        <h3>Reporte de Reservas</h3>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Sede</th>
                            <th>Versión</th>
                            <th>Película</th>
                            <th>Precio</th>
                            <th>Reservado por</th>
                            <th>En la fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ReservasNegocio r in Model)
                                {
                            <tr>
                                <td>@r.Reserva</td>
                                <td>@r.Sede </td>
                                <td>@r.Version </td>
                                <td>@r.Pelicula </td>
                                <td>@r.Precio </td>
                                <td>@r.ReservadoPor </td>
                                <td>@r.Fecha</td>

                            </tr>
                             }
                    </tbody>
                </table>
    </div>
</div>
