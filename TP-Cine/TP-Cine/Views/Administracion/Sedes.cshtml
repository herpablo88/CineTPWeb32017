@{
    ViewBag.Title = "Administracion_Sedes";
}

@{Html.RenderPartial("_AdministracionPartial");}

@using TP_Cine

@model List<Sedes>
<h1>Administración: Sedes</h1>

<div class="row">
    <div class="col-sm-9">
        <h3>Sedes registradas</h3>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                   
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Entrada Gral.</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Sedes s in Model)
                    {
                        <tr>                       
                            <td>@s.Nombre</td>
                            <td>@s.Direccion</td>
                            <td>@s.PrecioGeneral</td>

                            <td>
                                @Ajax.ActionLink("Modificar", "Sedes_Modificar", new { id = @s.IdSede },
                                 new AjaxOptions() { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modifSede" },
                                 new { @class = "btn btn-default" })
                            </td>
                        </tr>
                     }
            </tbody>
        </table>
    </div>
</div>


<div class="row">
    <div>
            <button type="button" class="btn btn-default btn-lg " data-toggle="modal" data-target="#exampleModal">Nuevo</button>
        
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel2">Nueva Sede</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form method="post" action="AgregarSede">
                            <div class="modal-body">
                                @*  @using (Html.BeginForm("AgregarSede", "Administracion", FormMethod.Post))
                                {
                                     Despues hacerlos con html helper *@
                                <div class="form-group">
                                    <label>Nombre:</label>
                                    <input id="Text4" type="text" class="form-control" name="nombre" />
                                </div>
                                <div class="form-group">
                                    <label>Dirección:</label>
                                    <input id="Text5" type="text" class="form-control" name="direccion" />
                                </div>
                                <div class="form-group">
                                    <label>Precio Entrada General:</label>
                                    <input id="Text6" type="text" class="form-control" name="precioGeneral" />
                                </div>
                                @*}*@
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-default">Agregar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>