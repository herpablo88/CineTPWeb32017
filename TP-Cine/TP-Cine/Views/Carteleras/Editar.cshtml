@model TP_Cine.Carteleras

@{
    ViewBag.Title = "Editar";
}
@{Html.RenderPartial("_AdministracionPartial");}
<script src="~/js/FuncionesCarteleras/Validaciones.js"></script>

<h1 class="text-center">Administración: Cartelera</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="conytainer-fluid">
        <div class="row-fluid">
            <div class="col-md-offset-3 col-md-6">
                <h3>Editar Cartelera</h3>
                <hr />
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.ValidationMessage("validacion", "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IdCartelera)

                    <div class="form-group">
                        @Html.LabelFor(model => model.IdSede, "Sede", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("IdSede", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdSede, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IdPelicula, "Película", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("IdPelicula", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdPelicula, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HoraInicio, "Hora de Inicio", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HoraInicio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HoraInicio, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaInicio,"Fecha de Inicio", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FechaInicio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaFin, "Fecha de Fin", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FechaFin, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NumeroSala, "Nro de Sala", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NumeroSala, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NumeroSala, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IdVersion, "Versión", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("IdVersion", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdVersion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Dias</label>
                        <div class="col-md-10">
                            @Html.ValidationMessage("validacionDias", "", new { @class = "text-danger" })
                            <div class="checkbox-inline">
                                @Html.EditorFor(model => model.Lunes)
                                @Html.ValidationMessageFor(model => model.Lunes, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Lunes)
                            </div>

                            <div class="checkbox-inline">
                                @Html.EditorFor(model => model.Martes)
                                @Html.ValidationMessageFor(model => model.Martes, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Martes)
                            </div>

                            <div class="checkbox-inline">
                                @Html.EditorFor(model => model.Miercoles)
                                @Html.ValidationMessageFor(model => model.Miercoles, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Miercoles)
                            </div>

                            <div class="checkbox-inline">
                                @Html.EditorFor(model => model.Jueves)
                                @Html.ValidationMessageFor(model => model.Jueves, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Jueves)
                            </div>

                            <div class="checkbox-inline">
                                @Html.EditorFor(model => model.Viernes)
                                @Html.ValidationMessageFor(model => model.Viernes, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Viernes)
                            </div>

                            <div class="checkbox-inline">
                                @Html.EditorFor(model => model.Sabado)
                                @Html.ValidationMessageFor(model => model.Sabado, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Sabado)
                            </div>

                            <div class="checkbox-inline">
                                @Html.EditorFor(model => model.Domingo)
                                @Html.ValidationMessageFor(model => model.Domingo, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Domingo)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaCarga, "Fecha de Carga", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.FechaCarga, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Modificar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}