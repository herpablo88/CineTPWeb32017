@model IEnumerable<TP_Cine.Carteleras>

@{
    ViewBag.Title = "Index";
}
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdCartelera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdSede)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdPelicula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoraInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaFin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroSala)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdVersion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lunes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Martes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Miercoles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jueves)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Viernes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sabado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Domingo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCarga)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCartelera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSede)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPelicula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroSala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVersion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lunes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Martes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Miercoles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jueves)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Viernes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sabado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domingo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCarga)
            </td>
            <td>
                <a href="@Url.Action("Editar", "Carteleras", new { id = item.IdCartelera })"> <button type="button" class="btn btn-warning btn-xs">Editar</button> </a>
                <a href="@Url.Action("Eliminar", "Carteleras", new { id = item.IdCartelera })"> <button type="button" class="btn btn-danger btn-xs">Eliminar</button> </a>
            </td>
        </tr>
    }

</table>
